# All editing shortcuts are for dotfiles, so run Telescope from there
function zsh_vim_edit_dotfiles {
    file=$1
    back=$(pwd)
    cd $HOME/.dotfiles && vim $file && cd $back
}
e=zsh_vim_edit_dotfiles

